<!DOCTYPE html>
  <html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
    <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
      <meta name="referrer" content="origin">
  
      <title>{{ page_title }}</title>
  
      {{ content_for_header }}
  
      {{ checkout_stylesheets }}
      {{ checkout_scripts }}
  
      <!--Route Code Edited 9/13/2023-->
      <script type="text/javascript" src="https://cdn.routeapp.io/route-widget-shopify/v2/route-widget-shopify-stable-v2.min.js"></script>
      <style>
          route-protect-widget[payer="customer"]::after{
            content: "*By opting out of shipping protection, Avara is not responsible for lost, damaged, or stolen packages during transit.";
            white-space: pre-wrap;
            display: inline-block;
            margin-bottom: 15px;
            margin-top: -15px;
            font-size: 0.75rem;
            color: #918B86;
          }
          .route-div{
            text-align: left;
          }
      </style>
      {% if content_for_layout contains 'data-step="shipping_method"' %}
        <style>
          .route-div{
            display: none;
          }
        </style>
      {% endif %}
      <!--End Route Code-->
      
    </head>
    <body>
      {{ skip_to_content_link }}
  
      <header class="banner" data-header role="banner">
        <div class="wrap">
          {{ content_for_logo }}
        </div>
      </header>
  
      {{ order_summary_toggle }}
      <div class="content" data-content>
        <div class="wrap">
          <div class="main">
            <header class="main__header" role="banner">
              {{ content_for_logo }}
              {{ breadcrumb }}
              {{ alternative_payment_methods }}
            </header>
  
            <!--Route Code Edited 9/13/2023-->
            {% if content_for_layout contains 'data-step="contact_information"'%}
               <div class="route-div" desktop-align="left"></div>
            {% endif %}
            <!--End Route Code--> 
            
            <main class="main__content" role="main">
              {{ content_for_layout }}
            </main>
            <footer class="main__footer" role="contentinfo">
              {{ content_for_footer }}
            </footer>
          </div>
          <aside class="sidebar" role="complementary">
            <div class="sidebar__header">
              {{ content_for_logo }}
            </div>
            <div class="sidebar__content">
              {{ content_for_order_summary }}
            </div>
          </aside>
        </div>
      </div>
  
      {{ tracking_code }}
      <script>
        // New 'Final Sale' custom product text by tag code
        document.addEventListener('DOMContentLoaded', function() {
            var elements = document.querySelectorAll('.product__description__property');
        
            elements.forEach(function(element) {
                if (element.innerHTML.includes("Special:")) {
                    var parts = element.innerHTML.split("Special:");
                    if (parts.length > 1) {
                        var customText = parts[1].trim();
                        element.innerHTML = "<span class=\"final-sale\">" + customText + "</span>";
                    }
                }
            });
        });
        </script>
        <style>
          .final-sale {
            font-size: 0.75rem;
            color: rgb(216 49 91);
            text-transform: uppercase;
          }
        </style>
        
  </body>
  </html>
  